<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Baza pojęć</h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= root_path %>">Strona Główna</a>
      </li>
      <li class="breadcrumb-item active">
        <strong>Baza Definicji</strong>
      </li>
    </ol>
  </div>
</div>

<div class="ibox">
  <div class="ibox-title">
    <h3>Baza pojęć</h3>
    <div class="ibox-tools">
      <%= link_to new_concept_path, class: "btn btn-sm btn-primary" do %>
        <i class="fa fa-plus"></i> Dodaj definicję
      <% end %>
    </div>
  </div>
  <div class="ibox-content">
    <%= render 'concepts' %>
  </div>
</div>

<%= content_for :searchbar do %>
  <%= search_form_for @q, class: "navbar-form-custom" do |f| %>
    <div class="form-group">
        <%= f.search_field :name_or_name_en_or_body_or_body_en_or_authors_cont, placeholder: "Wyszukaj definicję", id: "top-search", class: "form-control" %>
    </div>
  <% end %>
<% end %>
