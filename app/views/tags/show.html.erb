<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= @tag.name %></h2>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="<%= root_path %>">Strona Główna</a>
      </li>
      <li class="breadcrumb-item">
        <a href="<%= tags_path %>">Baza tagów</a>
      </li>
      <li class="breadcrumb-item active">
        <strong><%= @tag.name %></strong>
      </li>
    </ol>
  </div>
</div>

<div class="ibox">
  <div class="ibox-title">
    <h3>Dane tagu</h3>
    <div class="ibox-tools">
      <%= link_to 'Edycja', edit_tag_path(@tag), class: "btn btn-sm btn-primary" %>
      <%= link_to 'Cofnij', tags_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  <div class="ibox-content">
    <div class="row">
      <div class="col-sm-4">
        <p>
          <strong>Nazwa</strong><br />
          <%= @tag.name %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="ibox">
  <div class="ibox-title">
    <h3>Powiązane definicje</h3>
    <div class="ibox-tools">

    </div>
  </div>
  <div class="ibox-content">
    <%= render "concepts/concepts" %>
  </div>
</div>

<%= content_for :searchbar do %>
  <%= search_form_for @q, url: @tag, method: :get, class: "navbar-form-custom" do |f| %>
    <div class="form-group">
        <%= f.search_field :name_or_body_cont, placeholder: "Wyszukaj definicję", id: "top-search", class: "form-control" %>
    </div>
  <% end %>
<% end %>
